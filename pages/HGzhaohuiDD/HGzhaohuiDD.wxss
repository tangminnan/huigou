.van-modal{
  -moz-opacity: 0.7;
  opacity: 0.70;
  filter: alpha(opacity=70);
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background-color: rgba(0,0,0,.7);
  z-index: 200;
  }
  .selectedGoodMsg{
    position: fixed;
    top: 50%;
    left:50%;
    transform: translate(-50% ,-50%);
    right: auto;
    background: #fff;
    z-index: 201;
   width:580rpx;
    height: 60%;
    border-radius:20rpx;
    text-align: center;
  }
