.weui-search-img image{width: 168rpx;height: 168rpx;display: block;margin:100rpx auto;}
.weui-search-bar {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  box-sizing: border-box;
  background: #fff;
  margin:0 40rpx;
  border-radius:10rpx;
  overflow: hidden;
  line-height: 100rpx;
}
.weui-search-bar__input {
   padding:0 20rpx;
  height: 100rpx;
  font-size: 30rpx;
  width:75%;
  float: left; 
}
.weui-search-bar__cancel-btn {
  width:25%;
  text-align: center;
  color: #fff;
  font-size: 36rpx;
  background: #FF2328;
}

