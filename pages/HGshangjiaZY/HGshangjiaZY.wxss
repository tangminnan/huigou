.shangjia{margin:40rpx;line-height: 120rpx;}
.shangjia image{width: 120rpx;height: 120rpx;vertical-align: middle;}
.shangjia text{font-size: 32rpx;margin-left: 24rpx;font-weight: bold;}
.shangjia .arr{float: right;margin-top:50rpx;}

.nav_right_items{
  background:#fff;
  margin:0 24rpx;
  overflow: hidden;
  padding:0 24rpx;
  border-radius:10rpx;
}
.nav_right_items .box{border-bottom: 1px solid #eee;overflow: hidden;padding:30rpx 0;}
.box_titpic{
  width: 160rpx;
  height: 160rpx;
  border-radius:5rpx;
  float: left;
}
.box_txt{
  float: left;
  margin-left:24rpx;
  width: 70%;
}
.box_txt .t1{font-size: 30rpx;}
.box_txt .t2{
 font-size: 36rpx;
 color: #FF3B2B;
 margin: 15rpx 0 25rpx;
}
.box_txt .t2 .t2_2{
 font-size: 26rpx;
 color: #999;
 text-decoration: line-through;
 margin-left:12rpx;
}
.box_txt .t3 .t3_1{float: left;font-size: 26rpx;}
.box_txt .t3 .t3_2{float: right;}
.box_txt .t3 image{
   width: 44rpx;
   height: 40rpx;
   margin-right:30rpx;
}
.arr{
   width: 28rpx;
   height:28rpx;
   border-top:2rpx solid #666;
   border-right:2rpx solid #666;
   transform:rotate(45deg);
   display: inline-block;
}