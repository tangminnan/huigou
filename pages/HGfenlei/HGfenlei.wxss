/*左侧滚动栏*/
/* 2.主盒子 */
.container { 
  width: 100%; /* 宽度占屏幕的100% */
  height: 100%; /* 高度占屏幕的100% */
  background-color: #fff; /* 背景颜色 */
 }
 /* 3.左盒子*/
  /* 3.1. 左侧栏主盒子总体设置 */
 .nav_left{ 
  position:absolute; /* 使用绝对定位 */
  top:80rpx; /* 距离上边距：0px */
  left:0px; /* 距离左边距：0px */
  width: 25%; /* 每个item所占的宽度 */
  background: #f5f5f5; /* 主盒子设置背景色为灰色 */
  text-align: center; /* 文字居中显示 */
 }
 /* 3.2. 左侧栏的每个item */
 .nav_left .nav_left_items{ 
  height:100rpx; /* 每个item高40px*/
  line-height: 100rpx;
  border-bottom: 1px solid #eee; /* 设置下边线 */
  font-size: 30rpx; 
 } 
 /* 3.3. 左侧栏list的item被选中时*/
 .nav_left .nav_left_items.active{ 
  background: #fff; /* 背景色变成白色 */
  color: #B09B6D; /* 字体编程蓝色 */
  border-left: 3px solid #B09B6D; /* 设置边框的宽度以及颜色 */
 }
 /* 4.右盒子 */
 /* 4.1. 右侧栏主盒子总体设置 */
 .nav_right{ 
  position: absolute; /* 使用绝对定位 */
  top:80rpx; /* 距离上边距：0px */
  left: 80px; /* 距离左边距：80px */
  width: 75%; /* 右侧主盒子所占宽度 */
  padding: 24rpx; /* 所有 4 个内边距都是 10px*/
  box-sizing: border-box;
 }
 /* 4.2. 右侧栏中的每个item */
 .nav_right .nav_right_items .box{ 
  border-bottom:1rpx solid #eee;
  overflow: hidden;
  padding:30rpx 0;
 } 
