              <text class="iconfont icon-hgshanchu color-888"></text>
            </view>
            <view class="flex-hbox">
              <text class="price font-36 font-bold flex-spread">¥4.20</text>
              <view class="number-plus flex-hbox cross-center">
                <text data-role="decrease" class="btn" bindtap="decrease">-</text>
                <input data-role="input" bindinput="onCountChange" class="input" value="{{count}}" type="number"></input>
                <text data-role="increase" class="btn" bindtap="increase">+</text>
              </view>
            </view>
          </view>
        </view>
