<view wx:if="{{list && list.length}}" class="container">
  <scroll-view class="scoll-list">
    <view wx:for="{{list}}" wx:key="{{item.hgGoodsDetailEntity.hgGoods.id}}" class="merchant-panel">
      <view class="merchant-name font-30 font-bold" data-id="{{item.hgGoodsDetailEntity.hgGoods.id}}" bindtap="toggleMerchantChange">
        <view class="hg-checkbox {{selectedList[item.hgGoodsDetailEntity.hgGoods.id].checked ? 'hg-checkbox__checked' : ''}}">
          <mp-icon icon="done" size="14" color="#fff" />
        </view>{{item.hgUserInfo.shopName}}
      </view>
      <view class="panel panel-stack product-list">
        <view wx:for="{{item.hgGoodsDetailEntity.hgSpecifications}}" wx:for-index="skuIdx" wx:for-item="sku"
          wx:key="{{sku.id}}" data-index="{{skuIdx}}" class="product-item flex-hbox cross-center"
          bindtap="toggleSkuChange">
          <view class="hg-checkbox {{sku.checked ? 'hg-checkbox__checked' : ''}}">
            <mp-icon icon="done" size="14" color="#fff" />
          </view>
          <image class="product-image" src="{{item.hgGoodsDetailEntity.hgGoodsFiles[0].picture}}"></image>
          <view class="product-info flex-vbox flex-spread">
            <view class="flex-hbox flex-spread">
              <text class="flex-spread text-ellipis-2 font-30">{{sku.name}}</text>
              <text class="iconfont icon-hgshanchu color-888"></text>
            </view>
            <view class="flex-hbox">
              <text class="price font-36 font-bold flex-spread">{{sku.goodsPresentPrice}}</text>
              <view class="number-plus flex-hbox cross-center">
                <text data-role="decrease" class="btn" data-index="{{skuIdx}}" bindtap="decrease">-</text>
                <input data-role="input" bindinput="onCountChange" class="input" value="{{sku.count}}"
                  type="number"></input>
                <text data-role="increase" class="btn" data-index="{{skuIdx}}" bindtap="increase">+</text>
              </view>
            </view>
          </view>
        </view>
      </view>
    </view>
  </scroll-view>
  <view class="fix-btn flex-hbox cross-center">
    <view class="checkbox font-30 color-999" bindtap="toggleAllChange">
      <view class="hg-checkbox {{isAllChecked ? 'hg-checkbox__checked' : ''}}">
        <mp-icon icon="done" size="14" color="#fff" />
      </view>全选
    </view>
    <text class="flex-spread font-32">合计: <text class="total-price font-bold">¥{{total}}</text></text>
    <view class="submit-btn" bindtap="onClickSubmit">结算</view>
  </view>
</view>
<view wx:else class="empty">
  <image src="/assets/empty.png"></image>
  <view class="color-999">当前购物车为空，去添加商品吧</view>
</view>