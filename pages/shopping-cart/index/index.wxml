  <scroll-view class="scoll-list">
    <view class="merchant-panel">
      <view class="merchant-name font-30 font-bold" bindtap="toggleChange">
        <view class="hg-checkbox {{isChecked ? 'hg-checkbox__checked' : ''}}">
          <mp-icon icon="done" size="14" color="#fff" />
        </view>蒙牛惠购旗舰店
      </view>
      <view class="panel panel-stack product-list">
        <view class="product-item flex-hbox cross-center" bindtap="toggleChange">
