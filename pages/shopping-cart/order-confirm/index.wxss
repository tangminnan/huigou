.address-panel.address-panel {
  padding: 32rpx;
  margin-top: 32rpx;
}

.merchant-panel.merchant-panel {
  margin-top: 32rpx;
}

.merchant-panel.merchant-panel .title {
  padding: 24rpx 0 0 24rpx;
}

.merchant-panel.merchant-panel .order-remark {
  padding-bottom: 20rpx;
}

.merchant-panel.merchant-panel .order-remark .content {
  padding: 24rpx;
}

.express-panel.express-panel {
  margin-top: 24rpx;
  padding: 0 24rpx;
  height: 265rpx;
  justify-content: center;
  font-size: 28rpx;
}

/* 商品卡片 */

.product-item {
  padding: 32rpx;
  background-color: #fff;
  border-radius: 16rpx;
}

.product-item .product-image {
  width: 138rpx;
  height: 138rpx;
}

.product-item .product-info {
  align-self: stretch;
  margin-left: 32rpx;
}

.product-item .product-info .price {
  color: #FF3B30;
}

.product-item .product-info .icon-hgshanchu {
  width: 80rpx;
  text-align: right;
}

.product-item .product-info .number-plus {
  border: 1px solid #e5e5e5;
  width: 152rpx;
  height: 44rpx;
  line-height: 44rpx;
}

/*  */

.fix-btn {
  position: fixed;
  bottom: 0;
  height: 124rpx;
  width: 750rpx;
  background-color: #fff;
  border-top: 1px solid #EEEEEE;
}

.fix-btn .checkbox {
  margin: 0 32rpx;

}

.fix-btn .total-price {
  color: #FF3B30;
}

.fix-btn .submit-btn {
  width: 686rpx;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(270deg, rgba(255, 109, 94, 1) 0%, rgba(255, 59, 48, 1) 100%);
  border-radius: 44rpx;
  text-align: center;
  color: #fff;
  margin: 0 auto;
}