.result {
  background-color: #fff;
  height: 400rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.result image {
  width: 108rpx;
  height: 108rpx;
}

.result .desc {
  font-size: 36rpx;
  margin-top: 40rpx;
}

.result .detail {
  font-size: 26rpx;
  color: #999;
  margin-top: 16rpx;
}

.retry-btn {
  color: #fff;
  font-size: 36rpx;
  width: 686rpx;
  height: 94rpx;
  background: linear-gradient(270deg, #FF5E4D 0%, #FF3B30 100%);
  border-radius: 48rpx;
  margin-top: 40rpx;
}