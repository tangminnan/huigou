  <!--index.wxml-->
<view class="newDZ">
    <view class="addBox">
        <text>收货人</text>
        <input placeholder="请输入收货人"></input>
    </view>
    <view class="addBox">
        <text>手机号</text>
        <input placeholder="请输入11位手机号"></input>
    </view>
    <view class="Hlist">
      <text>所在城市</text>
      <view class="right">
          <picker mode="region" bindchange="bindRegionChange" value="{{region}}" custom-item="{{customItem}}">
            <view class="picker">
              {{region[0]}}，{{region[1]}}，{{region[2]}}
            </view>
          </picker>
          <view class="arrow"></view>
      </view>
    </view>
    <view class="addBox">
        <text>详细地址</text>
        <input placeholder="请输入详细地址"></input>
    </view>
</view>

<view class="moren bg-W">
    <text class="fl">设为默认地址</text>
    <switch class="fr wx-switch-input" bindchange="switchChange"/>
</view>

<view class="button-sp-area">
    <button plain="true">保存</button>
</view>

