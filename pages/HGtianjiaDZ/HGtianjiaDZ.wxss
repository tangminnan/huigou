.newDZ{margin:20rpx 0;font-size: 34rpx;}
.fl{float:left;}
.fr{float:right;}
.newDZ .addBox{padding: 0 30rpx;background: #fff;margin-bottom: 1px;overflow: hidden;line-height: 100rpx;position: relative;}
.newDZ .addBox text{float:left;width: 20%;} 
.newDZ .addBox input{float:right;height: 100rpx;width: 75%;}
