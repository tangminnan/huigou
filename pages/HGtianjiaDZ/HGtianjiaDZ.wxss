.moren{line-height: 100rpx;overflow:hidden;margin-bottom: 50rpx;padding:0 30rpx;font-size: 34rpx;}
switch{zoom:0.8;}
.button-sp-area{
  margin: 0 auto;
  width: 60%;
}
.button-sp-area{
  position: fixed;
  bottom:0;
  background: #fff;
  width: 100%;
  text-align: center;
  padding:15rpx 0 10rpx;
}
.button-sp-area button{
  width:90%;
  color: #fff;
  background: #FF2328;
  border:none;
  border-radius:60rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 34rpx;
  display: inline-block;
  margin:0 10rpx;
}
picker{display: inline-block;}
.Hlist{background:#fff;margin-bottom:5rpx;padding:0 30rpx;line-height:100rpx;position:relative;}
.Hlist .right{position: absolute;right:0;top:0;width:70%;text-align: right;padding-right: 60rpx;}
.Hlist .arrow{width:20rpx;height:20rpx;border-top:2rpx solid #666;border-right:2rpx solid #666;transform:rotate(45deg);display:inline-block;}









