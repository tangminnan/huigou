/*== 生成图片弹框样式 ==*/
.van-modal{
  -moz-opacity: 0.8;
  opacity: 0.8;
  filter: alpha(opacity=80);
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background-color: rgba(0,0,0,.8);
  z-index:10;
}
.selectedGoodMsg{
  position: fixed;
  top: 50%;
  left:50%;
  transform: translate(-50% ,-50%);
  right: auto;
  z-index:40;
  width: 80%;
  background: #fff;
  border-radius:20rpx;
}
.selectedGoodMsg .t1{font-size: 36rpx;text-align: center;padding:60rpx 0;}
.selectedGoodMsg input{
  height: 100rpx;
  line-height: 100rpx;
  margin:0 33rpx 60rpx;
  font-size: 30rpx;
  border:1px solid #979797;
  padding:0 25rpx;
  border-radius:5rpx;
}
.selectedGoodMsg button{
  font-size: 36rpx;
  height: 100rpx;
  line-height: 100rpx;
  background:none;
}
.selectedGoodMsg button::after{ 
  border-radius:0;
  border:none;
  border-top:1px solid #ccc;
}
