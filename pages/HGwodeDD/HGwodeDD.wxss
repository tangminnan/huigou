.fl{float:left;}
.fr{float:right;}
.c-red{color: #FF3B23;}
page{
  display: flex;
  flex-direction: column;
  height: 100%;
}
.navbar{
  flex: none;
  display: flex;
  background: #fff;
  font-size: 34rpx;
  color: #7D7D7D;
  margin-bottom: 20rpx;
}
.navbar .item{
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 90rpx;
}
.navbar .item.active{
  color: #FF2328;
}
.navbar .item.active:after{
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: #FF2328;
}
.swiper{
  height: 100%
}


.itemBox{background: #fff;padding: 30rpx; margin-bottom: 10rpx;overflow: hidden;}

