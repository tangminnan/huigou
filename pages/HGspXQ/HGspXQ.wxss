/*======== 点击购买选择套餐的弹框样式 =========*/
/*使屏幕变暗  */
.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}
/*对话框 */
.commodity_attr_box {
  height: auto;
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
  padding: 30rpx;
  box-sizing: border-box;
}
.V1{ overflow: hidden; margin-bottom: 30rpx;}
.V1 image{float: left;width:200rpx;height: 200rpx;border: 1rpx solid #eee;border-radius: 10rpx;}
.V1 view{float: left;margin-left: 30rpx;}
.V1 view text{display: block;font-size: 28rpx;}
.V1 view .t1{color: #FF3B00;margin:20rpx 0;font-size: 42rpx;}
.V1 view .t2{font-size: 24rpx;color: #666;margin-bottom: 16rpx;}
.V2{margin-bottom: 50rpx;overflow: hidden;}
.V2 .t1{font-size: 36rpx;margin-bottom:30rpx;display: block;}
.V2 .color{overflow: hidden;padding-bottom:20rpx;}
/* 选择套餐 */
.iconusecont-div {
