}
.goum{line-height:60rpx;float: left;font-size: 32rpx;}
/*主容器*/  
.stepper {  
  height: 26px;  
  /*给主容器设一个边框*/  
  border: 1px solid #ccc;  
  border-radius: 3px;  
  float: right; 
}  
/*加号和减号*/  
.stepper text {  
  width: 35px;  
  line-height: 26px;  
  text-align: center;  
  float: left; 
  font-size: 36rpx; 
}  
/*数值*/  
.stepper input {  
  width: 50px;  
  height: 26px;  
  float: left;  
  margin: 0 auto;  
  text-align: center;  
  font-size: 12px;  
  /*给中间的input设置左右边框即可*/  
  border-left: 1px solid #ccc;  
  border-right: 1px solid #ccc;  
}  
/*普通样式*/  
.stepper .normal{  
  color: black;  
}  
/*禁用样式*/  
.stepper .disabled{  
  color: #ccc;  
} 
.close image{width: 46rpx;height: 46rpx;position: absolute;top:30rpx;right:30rpx;} 
.sure{width:100% !important;background: #FF3B30;color: #fff;border-radius:60rpx;font-size: 30rpx;}

